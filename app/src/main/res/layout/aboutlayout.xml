<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none"
    android:layout_marginLeft="13dp"
    android:padding="-10dp"
    android:layout_marginRight="13dp"
    android:background="@drawable/rounded_corner"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackground"
        android:id="@+id/mainis"
        android:paddingStart="15dp"
        android:layout_marginTop="-8dp"
        android:clickable="true"
        android:orientation="horizontal">


        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_height="35dp"
            android:layout_width="35dp"
            android:id="@+id/accountpic"
            android:clickable="true"
            android:layout_marginTop="15dp"
            android:layout_marginRight="3dp"
            android:src="@drawable/compass"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:clickable="true"
            android:orientation="vertical">
            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:clickable="true"
                android:paddingTop="2dp"
                android:gravity="top|center_vertical"
                android:text="Jai Gupta"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/userid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:clickable="true"
                android:layout_marginTop="4dp"
                android:typeface="sans"
                android:text="vidit135g@gmail.com"
                android:textColor="@color/grey_800"
                android:textSize="12sp" />
        </LinearLayout>


    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:id="@+id/accman"
        android:layout_below="@+id/mainis"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text=" Personalize your Blaze Account "
        android:background="@drawable/ripple_text"
        android:paddingLeft="23dp"
        android:paddingRight="23dp"
        android:paddingTop="8dp"
        android:layout_marginTop="16dp"
        android:clickable="true"
        android:paddingBottom="8dp"
        android:foreground="@drawable/rectangle"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textStyle="bold"
        android:id="@+id/log"
        android:layout_below="@+id/accman"
        android:textColor="@color/black"
        android:clickable="true"
        android:text="Logout from your Blaze Account"
        android:background="@drawable/ripple_text"
        android:foreground="@drawable/rectangle"
        android:paddingLeft="23dp"
        android:paddingRight="23dp"
        android:paddingTop="8dp"
        android:layout_marginTop="16dp"
        android:paddingBottom="8dp"
        android:layout_centerHorizontal="true"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/hmarg1"
        android:background="#d3d3d3"
        android:layout_marginTop="30dp"
        android:layout_below="@id/log"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@id/hmarg1"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#414141"
            android:layout_weight="1"
            android:gravity="end"
            android:textSize="12sp"
            android:text="Privacy Policy"/>

        <ImageView
            android:layout_width="3dp"
            android:layout_height="3dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="-3dp"
            android:baselineAlignBottom="true"
            android:src="@drawable/circle"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Terms of Service"
            android:layout_weight="1"
            android:textSize="12sp"
            android:gravity="start"
            android:textColor="#414141"/>
    </LinearLayout>
</RelativeLayout>